@{
    ViewBag.Title = "Add new Pet";
}

<div class="col-sm-4">
    <h3>Add new Bowl:</h3>
    <div id="bowl">
        <form data-bind="submit: createBowl">
            <div class="form-group">
                <label for="createName">Name:</label>
                <input type="text" data-bind="value: createName" class="form-control" id="createName" />
            </div>
            <div class="form-group">
                <label for="createLocation">Location:</label>
                <input type="text" data-bind="value: createLocation" class="form-control" id="createLocation" />
            </div>
            <div class="form-group">
                <label for="createFoodName">Food name:</label>
                <input type="text" data-bind="value: createFoodName" class="form-control" id="createFoodName" />
            </div>
            <div class="form-group">
                <label for="createFoodAmount">Food amount:</label>
                <input type="number" data-bind="value: createFoodAmount" class="form-control" id="createFoodAmount" />
            </div>
            <div class="form-group">
                <label for="createAlertAmount">Alert amount:</label>
                <input type="number" data-bind="value: createAlertAmount" class="form-control" id="createAlertAmount" />
            </div>
            <button type="submit">Add</button>
        </form>
    </div>
</div>
@section Scripts{
    <script src="~/js/app/ViewModels/Bowl.js"></script>
    <script>
        ko.applyBindings(new BowlViewModel(), document.getElementById("bowl"));
    </script>
}